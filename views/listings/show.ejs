<% layout("./layouts/boilerplate")%>
<body>
    <div class="row">
     <div class="col-8 offset-3 ">
    <h3>Welcome to Show Route</h3>
    </div>
    <div class="card  col-6 offset-3 show-card">
        <div class="card">
            <img src="<%=list.image%>" class="card-img-top  show-img" alt="Image">
            <div class="card-body">
              <p class="card-text">
                
               <b> <%=list.title %></b><br>
                <%=list.description %> <br>
                 &#8377; <%= list.price %> <br>
                <%=list.location %> <br>
                <%=list.country %>
            </p>
            </div>
          </div>
    </div>
  <br> 
  <div class="btns mb-3">
    <a href="/listings/<%= list._id%>/edit"  class="btn btn-dark col-1 offset-3 btn-color">Edit</a>
    <form method="post" action="/listings/<%= list._id%>/delete?_method=DELETE">
    <button class="btn btn-danger  offset-4" >Delete</button>
    </form>
</div>


</div>
</body>